<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Please click on the links below to redirect to the website: - "
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/department_of_commerce"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/emblem1" />
        <TextView
            android:id="@+id/d_o_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/department_of_commerce"
            android:layout_centerInParent="true"
            android:text="Department Of Commerce"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/ministry_of_mico"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/d_o_c"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/emblem1" />
        <TextView
            android:id="@+id/m_o_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ministry_of_mico"
            android:layout_centerInParent="true"
            android:text="Ministry Of Micro And Midium Enterprices  "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/corporate_affairs"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/m_o_m"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/emblem1" />

        <TextView
            android:id="@+id/c_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/corporate_affairs"
            android:layout_centerInParent="true"
            android:text="Corporate Affairs"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/business_interaction"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/c_a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/ebiz" />
        <TextView
            android:id="@+id/b_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_interaction"
            android:layout_centerInParent="true"
            android:text="Business interaction with government "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>




    </RelativeLayout>
</ScrollView>