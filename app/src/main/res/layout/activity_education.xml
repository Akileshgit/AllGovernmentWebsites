<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Please click on the links below to redirect to the website: - "
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/indian_navy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/indian_navy" />

        <ImageView
            android:id="@+id/swayam"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/swayam" />

        <ImageView
            android:id="@+id/studyinindia"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/swayam"
            android:layout_alignStart="@+id/indian_navy"
            android:layout_marginTop="40dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/studyinindia" />

        <ImageView
            android:id="@+id/diksha"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/studyinindia"
            android:layout_alignStart="@+id/indian_navy"
            android:layout_marginTop="40dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/diksha" />



    </RelativeLayout>
</ScrollView>