<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Please click on the links below to redirect to the website: - "
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/dep_of_atomic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/dep_atomic" />
        <TextView
            android:id="@+id/d_o_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dep_of_atomic"
            android:layout_centerInParent="true"
            android:text="Department Of Atomic Energy    "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/mini_power"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/mini_power" />
        <TextView
            android:id="@+id/m_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mini_power"
            android:layout_centerInParent="true"
            android:text="Ministry Of Power"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/mini_coal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/mini_coal" />
        <TextView
            android:id="@+id/m_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mini_coal"
            android:layout_centerInParent="true"
            android:text="Ministry  Of Coal"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>



    </RelativeLayout>
</ScrollView>