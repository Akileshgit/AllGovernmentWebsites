<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Please click on the links below to redirect to the website: - "
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/tourism_india"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/emblem1" />
        <TextView
            android:id="@+id/t_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tourism_india"
            android:layout_centerInParent="true"
            android:text="Tourism India"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/incredible_tourism"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t_i"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/emblem1" />
        <TextView
            android:id="@+id/i_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/incredible_tourism"
            android:layout_centerInParent="true"
            android:text="Incredible Tourism "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/indian_rail_enquiry"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/i_t"
            android:layout_alignStart="@+id/tourism_india"
            android:layout_marginTop="36dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/emblem1" />
        <TextView
            android:id="@+id/i_r_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/indian_rail_enquiry"
            android:layout_centerInParent="true"
            android:text="Indian Rail Enquiry  "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/indian_railway_catering"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/i_r_e"
            android:layout_alignStart="@+id/tourism_india"
            android:layout_marginTop="43dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/irl" />
        <TextView
            android:id="@+id/i_r_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/indian_railway_catering"
            android:layout_centerInParent="true"
            android:text="Indian Railway Catering And Tourism Corporation   "
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>



    </RelativeLayout>
</ScrollView>