<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Please click on the links below to redirect to the website: - "
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/nation_health"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/national_health" />

        <ImageView
            android:id="@+id/mini_youth"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/dep_youth" />

        <ImageView
            android:id="@+id/niftem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/mini_youth"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/mofpi" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/niftem"
            android:layout_centerInParent="true"
            android:text="Ministry of Human Resource Development"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/dep_water"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/mini_water" />


    </RelativeLayout>
</ScrollView>