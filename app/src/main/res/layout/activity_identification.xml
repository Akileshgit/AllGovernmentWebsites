<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Please click on the links below to redirect to the website: - "
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/aadhar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/img_shape"
        android:padding="10dp"
        android:src="@drawable/aadhar_logo" />

    <ImageView
        android:id="@+id/mini_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aadhar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/img_shape"
        android:padding="10dp"
        android:src="@drawable/ministry_of_aff" />

    <ImageView
        android:id="@+id/indane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mini_aff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/img_shape"
        android:padding="10dp"
        android:src="@drawable/indane"/>

        <ImageView
            android:id="@+id/ecourt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/indane"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/ecourt"/>

        <ImageView

            android:id="@+id/e_gov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ecourt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/e_gov"/>

        <ImageView

            android:id="@+id/digilocker"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/e_gov"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/digilocker"/>

        <ImageView
            android:id="@+id/passport"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/digilocker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/passport"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Passport"
            android:layout_below="@+id/passport"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/digisevak"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/img_shape"
            android:padding="10dp"
            android:src="@drawable/digisevak"/>


    </RelativeLayout>
</ScrollView>