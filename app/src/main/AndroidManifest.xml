<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pritamchakraborty.finalmovieapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/all_gov_web_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/all_gov_web_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>

        <activity android:name=".IdentificationActivity"/>
        <activity android:name=".ProductivityActivity"/>
        <activity android:name=".EnergyActivity"/>
        <activity android:name=".EducationActivity"/>
        <activity android:name=".FinanceActivity"/>
        <activity android:name=".LifestyleActivity"/>
        <activity android:name=".MinistryActivity"/>
        <activity android:name=".NewsActivity"/>
        <activity android:name=".SocialActivity"/>
        <activity android:name=".TravelActivity"/>
    </application>

</manifest>